{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://opensource.trymagic.xyz/schemas/mockserver.schema.json",
  "title": "MockServer Configuration Schema",
  "description": "JSON Schema definition for mockserver.json configuration files used by the MockServer project. Supports IDE autocompletion and validation when referenced via $schema.",
  "type": "object",
  "required": ["server", "routes"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "server": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 3000
        },
        "api_prefix": { "type": "string", "pattern": "^/.*", "default": "/v1" },
        "default_headers": {
          "type": "object",
          "patternProperties": { "^[A-Za-z0-9-]+$": { "type": "string" } },
          "additionalProperties": false,
          "default": { "Content-Type": "application/json" }
        },
        "default_delay_ms": { "type": "integer", "minimum": 0, "default": 0 },
        "swagger_ui_path": {
          "type": "string",
          "pattern": "^/.*",
          "default": "/docs"
        },
        "cors": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "allow_origins": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["*"]
            },
            "allow_methods": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
            },
            "allow_headers": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["*"]
            },
            "allow_credentials": { "type": "boolean", "default": false }
          },
          "additionalProperties": false
        },
        "auth": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "type": { "type": "string", "enum": ["apiKey", "bearer"] },
            "in": { "type": "string", "enum": ["header", "query"] },
            "name": { "type": "string" },
            "keys": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": false,
          "required": ["enabled", "type", "in", "name"]
        }
      }
    },
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" }
        }
      },
      "uniqueItems": true
    },
    "routes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "method", "path"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "tag": { "type": "string" },
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD", "OPTIONS"]
          },
          "path": { "type": "string", "pattern": "^/.*" },
          "status": { "type": "integer" },
          "headers": {
            "type": "object",
            "patternProperties": { "^[A-Za-z0-9-]+$": { "type": "string" } },
            "additionalProperties": false
          },
          "delay_ms": { "type": "integer", "minimum": 0 },
          "path_params": {
            "type": "object",
            "patternProperties": {
              "^[A-Za-z0-9_]+$": { "$ref": "#/definitions/paramDef" }
            },
            "additionalProperties": false
          },
          "query": {
            "type": "object",
            "patternProperties": {
              "^[A-Za-z0-9_]+$": { "$ref": "#/definitions/paramDef" }
            },
            "additionalProperties": false
          },
          "request_headers": {
            "type": "object",
            "patternProperties": {
              "^[A-Za-z0-9-]+$": { "$ref": "#/definitions/paramDef" }
            },
            "additionalProperties": false
          },
          "body_schema": { "type": "object", "additionalProperties": true },
          "body_example": {
            "type": ["object", "array", "string", "number", "boolean", "null"]
          },
          "auth": { "$ref": "#/properties/server/properties/auth" },
          "mock": {
            "type": "object",
            "required": ["file"],
            "additionalProperties": false,
            "properties": {
              "file": { "type": "string" },
              "status": { "type": "integer" },
              "headers": {
                "type": "object",
                "patternProperties": {
                  "^[A-Za-z0-9-]+$": { "type": "string" }
                },
                "additionalProperties": false
              },
              "delay_ms": { "type": "integer", "minimum": 0 }
            }
          },
          "fetch": {
            "type": "object",
            "required": ["url"],
            "additionalProperties": false,
            "properties": {
              "url": {
                "type": "string",
                "pattern": "^https?://(?:[^\\s{}]+|\\{[A-Za-z0-9_]+\\})+$"
              },
              "method": {
                "type": "string",
                "enum": [
                  "GET",
                  "POST",
                  "PUT",
                  "PATCH",
                  "DELETE",
                  "HEAD",
                  "OPTIONS"
                ]
              },
              "headers": {
                "type": "object",
                "patternProperties": {
                  "^[A-Za-z0-9-]+$": { "type": "string" }
                },
                "additionalProperties": false
              },
              "path_params": {
                "type": "object",
                "patternProperties": {
                  "^[A-Za-z0-9_]+$": { "$ref": "#/definitions/paramDef" }
                },
                "additionalProperties": false
              },
              "query_params": {
                "type": "object",
                "patternProperties": {
                  "^[A-Za-z0-9_]+$": { "$ref": "#/definitions/paramDef" }
                },
                "additionalProperties": false
              },
              "pass_status": { "type": "boolean" },
              "delay_ms": { "type": "integer", "minimum": 0 },
              "timeout_ms": { "type": "integer", "minimum": 1 }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "paramDef": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "integer", "number", "boolean", "array", "object"]
        },
        "description": { "type": "string" },
        "required": { "type": "boolean", "default": false },
        "enum": {
          "type": "array",
          "items": { "type": ["string", "number", "boolean"] }
        },
        "example": {
          "type": ["string", "number", "boolean", "object", "array", "null"]
        }
      }
    }
  }
}
